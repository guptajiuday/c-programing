    return 0;
}

####  Wonder full choclate offer
int main() {
    int D,N,C;
    scanf("%d%d%d",&C,&N,&D);
    //number of choclates left after n days
    printf("%d",C+N*D-N);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    return 0;
}

####  // You are given time = 2 Years. You have to take Principal Amount P and rate R from user and calculate and print compound interest.
#include <stdio.h>
#include <math.h>
int main()
{
    int P, R;
    float CI;
    scanf("%d", &P);
    scanf("%d", &R);
    CI = P * pow((1 + R / 100.0), 2);
    CI=CI-P;
    printf("%.2f", CI);
    return 0;
} 

#### Simple Intrest 6

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int P,R,T;
    scanf("%d%d%d",&P,&R,&T);
    printf("%d",((P*R*T)/100)+P);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}

####  Ant consequences

#include <math.h>
