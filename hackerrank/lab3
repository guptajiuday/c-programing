    printf("%0.0f",pow(K,N)*C);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    return 0;
}

####  Encoded Name

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
        int W1,W2,W3,W4,W5;
        scanf("%d&%d&%d&%d&%d",&W1,&W2,&W3,&W4,&W5);
        printf("%c%c%c%c%c",W1,W2,W3,W4,W5);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}


####  Leap Year 2

#include <stdio.h>
int main()
{
    int n, i;
    scanf("%d", &n);
    for (i = 1; i <= n; i++)
    {
        if (i % 400 == 0)
        {
            printf("%d ", i);
        }
        else if (i % 4 == 0 && i % 100 != 0)
        {
            printf("%d ", i);
        }
    }
    return 0;
}
